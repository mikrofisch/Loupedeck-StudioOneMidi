		<!-- ******************************************************************************************** -->
		<!-- Jog/Scrub   + Exteral Control -->
		<!-- ******************************************************************************************** -->

		<Control name="wheel" type="relative" options="receive"> <MidiMessage status="#B0" address="#3C" options="reversed" channel="0"/> </Control>
